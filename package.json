{
  "name": "card-magician",
  "version": "1.0.0",
  "description": "A tool for creating custom playing cards.",
  "keywords": [
    "trading",
    "cards",
    "magic",
    "the",
    "gathering",
    "desktop",
    "app"
  ],
  "homepage": "https://github.com/matortheeternal/card-magician#readme",
  "bugs": {
    "url": "https://github.com/matortheeternal/card-magician/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/matortheeternal/card-magician.git"
  },
  "license": "MIT",
  "author": "mator",
  "type": "module",
  "main": "index.js",
  "workspaces": [
    "games/magic"
  ],
  "scripts": {
    "build": "node esbuild.config.js --minify && npm --prefix games/magic run build",
    "localize": "npm run dev && neu run -- --localize",
    "dev": "node esbuild.config.js && npm --prefix games/magic run build",
    "release": "neu build --release",
    "start": "npm run dev && neu run -- --window-enable-inspector",
    "test": "npm run dev && neu run -- --run-tests",
    "lint": "npx eslint src"
  },
  "dependencies": {
    "@shoelace-style/shoelace": "^2.20.1",
    "@zumer/snapdom": "^2.0.0",
    "alpinejs": "^3.15.0",
    "codejar": "^4.3.0",
    "highlight.js": "^11.11.1",
    "notepack.io": "^3.0.1",
    "sanitize-html": "^2.17.0",
    "sigil-sifter": "^1.0.0",
    "yaml": "^2.8.2"
  },
  "devDependencies": {
    "@stylistic/eslint-plugin": "^5.6.1",
    "esbuild": "^0.25.10",
    "esbuild-plugin-copy": "^2.1.1",
    "esbuild-plugin-css-modules": "^0.3.0",
    "esbuild-plugin-import-glob": "^0.1.1",
    "eslint": "^9.39.2",
    "globals": "^16.5.0"
  }
}

#!/usr/bin/env sh
set -e

ROOT="$(cd "$(dirname "$0")" && pwd)"
APP_DIR="$ROOT/backend"

if ! command -v go >/dev/null 2>&1; then
  echo "Go is required but not installed."
  echo "See: https://go.dev/doc/install"
  echo "Then install wails with:"
  echo "go install github.com/wailsapp/wails/v2/cmd/wails@latest"
  exit 1
fi

if ! command -v wails >/dev/null 2>&1; then
  echo "Error: wails is not installed."
  echo "Install with: go install github.com/wailsapp/wails/v2/cmd/wails@latest"
  exit 1
fi

(
  cd "$APP_DIR" || exit 1
  exec wails "$@" -appargs="--app-dir=\"$ROOT\""
)
